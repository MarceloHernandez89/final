<!doctype html>
<html lang="es">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>SRBI</title>
  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  <!-- Estilos font-awesome-->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
    integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
  <!-- Navbar -->
  <nav class="navbar navbar-dark bg-dark justify-content-between mx-auto">
    <div class="row no-gutters px-3 mt-3 mb-3">
      <div class="col-auto">
        <a class="navbar-brand mx-auto p-auto"><i class="fa fa-ship" aria-hidden="true"></i></a>
      </div>
      <div class="col-auto p-8">
        <a class="navbar-brand">Sistema de Registro de Buques de Interes</a>
      </div>
    </div>
    </a>
  </nav>
  <% if(buque){ %>
    <!-- Contenedor principal -->
    <div class="container mt-4">
      <div class="container">
        <div class="card-header mb-3">
          <p class="fs-5 mt-2 text-body-secondary">Editar el registro</p>
        </div>
        <div class="card-body">
          <form form action="/update" method="post">
            <input id="id" name="id" value="<%= buque.id %>" hidden>
            <!-- Sección de información estática -->
            <div class="accordion mb-3" id="accordionGeneral">
              <div class="accordion-item">
                <h2 class="accordion-header" id="headingGeneral">
                  <button class="accordion-button" type="button" data-bs-toggle="collapse"
                    data-bs-target="#collapseGeneral" aria-expanded="true" aria-controls="collapseGeneral">
                    Información estática
                  </button>
                </h2>
                <div id="collapseGeneral" class="accordion-collapse collapse show" aria-labelledby="headingGeneral"
                  data-bs-parent="#accordionGeneral">
                  <div class="accordion-body">
                    <div class="row mb-3">
                      <!-- Campos de la sección -->
                      <div class="col">
                        <label for="nombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="nombre" name="nombre" value="<%= buque.nombre %>"
                          tabindex="1" autocomplete="off" required>
                      </div>
                      <div class="col">
                        <label for="bandera" class="form-label">Bandera</label>
                        <select class="form-select" id="bandera" name="bandera" tabindex="2" autocomplete="off"
                          required>
                          <option value="China" <%=buque.bandera=='China' ? "selected" : "" %>>China</option>
                          <option value="Corea del Sur" <%=buque.bandera=='Corea del Sur' ? "selected" : "" %>>Corea del
                            Sur</option>
                          <option value="España" <%=buque.bandera=='España' ? "selected" : "" %>>España</option>
                          <option value="No reconocida" <%=buque.bandera=='No reconocida' ? "selected" : "" %>>No
                            reconocida</option>
                          <option value="Portugal" <%=buque.bandera=='Portugal' ? "selected" : "" %>>Portugal</option>
                          <option value="Taiwan" <%=buque.bandera=='Taiwan' ? "selected" : "" %>>Taiwan</option>
                          <option value="Vanuatu" <%=buque.bandera=='Vanuatu' ? "selected" : "" %>>Vanuatu</option>
                          <option value="Noruega" <%=buque.bandera=='Noruega' ? "selected" : "" %>>Noruega</option>
                        </select>
                      </div>
                    </div>
                    <div class="row mb-3">
                      <div class="col">
                        <label for="mmsi" class="form-label">MMSI</label>
                        <input type="text" class="form-control" id="mmsi" name="mmsi" value="<%= buque.mmsi %>"
                          tabindex="3" autocomplete="off" required>
                      </div>
                      <div class="col">
                        <label for="imo" class="form-label">IMO</label>
                        <input type="text" class="form-control" id="imo" name="imo" value="<%= buque.imo %>"
                          tabindex="4" autocomplete="off" required>
                      </div>
                      <div class="col">
                        <label for="call_sign" class="form-label">Call Sign</label>
                        <input type="text" class="form-control" id="call_sign" name="call_sign"
                          value="<%= buque.call_sign%>" tabindex="5" autocomplete="off" required>
                      </div>
                    </div>
                    <div class="row mb-3">
                      <div class="col">
                        <label for="clase" class="form-label">Clase</label>
                        <select class="form-select" id="clase" name="clase" tabindex="6" autocomplete="off" required>
                          <option value="" selected disabled></option>
                          <option value="Pesquero" <%=buque.clase==='Pesquero' ? 'selected' : '' %>>Pesquero</option>
                        </select>
                      </div>
                      <div class="col">
                        <label for="subclase" class="form-label">Subclase</label>
                        <select class="form-select" id="subclase" name="subclase" tabindex="7" autocomplete="off"
                          required>
                          <option value="" selected disabled></option>
                          <option value="Arrastrero" <%=buque.subclase==='Arrastrero' ? 'selected' : '' %>>Arrastrero
                          </option>
                          <option value="Palangrero" <%=buque.subclase==='Palangrero' ? 'selected' : '' %>>Palangrero
                          </option>
                          <option value="Potero" <%=buque.subclase==='Potero' ? 'selected' : '' %>>Potero</option>
                          <option value="Polivalente" <%=buque.subclase==='Polivalente' ? 'selected' : '' %>>Polivalente
                          </option>
                          <option value="Pesquero no identificado" <%=buque.subclase==='Pesquero no identificado'
                            ? 'selected' : '' %>>Pesquero no identificado</option>
                        </select>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <!-- Sección información dinámica y detalle -->
            <div class="accordion" id="accordionCoordenadasDetalle">
              <div class="accordion-item">
                <h2 class="accordion-header" id="headingCoordenadasDetalle">
                  <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                    data-bs-target="#collapseCoordenadasDetalle" aria-expanded="false"
                    aria-controls="collapseCoordenadasDetalle">
                    Coordenadas y Detalle
                  </button>
                </h2>
                <div id="collapseCoordenadasDetalle" class="accordion-collapse collapse"
                  aria-labelledby="headingCoordenadasDetalle" data-bs-parent="#accordionCoordenadasDetalle">
                  <div class="accordion-body">
                    <div class="row mb-3">
                      <div class="col">
                        <label for="medio_gc" class="form-label">Medio PNA</label>
                        <select class="form-select" id="medio_gc" name="medio_gc" tabindex="8" autocomplete="off"
                          required>
                          <option value="GC-28 DERBES" <%=buque.medio_gc=='GC-28 DERBES' ? 'selected' : '' %>>GC-28
                            DERBES
                          </option>
                          <option value="GC-24 MANTILLA" <%=buque.medio_gc=='GC-24 MANTILLA' ? 'selected' : '' %>>GC-24
                            MANTILLA</option>
                        </select>
                      </div>
                      <div class="col">
                        <label for="latitud" class="form-label">Latitud</label>
                        <input type="text" class="form-control" id="latitud" name="latitud" value="<%= buque.latitud %>"
                          tabindex="9" autocomplete="off" required>
                      </div>
                      <div class="col">
                        <label for="longitud" class="form-label">Longitud</label>
                        <input type="text" class="form-control" id="longitud" name="longitud"
                          value="<%= buque.longitud %>" tabindex="10" autocomplete="off" required>
                      </div>
                      <div class="col-auto d-flex align-items-center mt-4">
                        <a><i class="fa fa-info-circle" aria-hidden="true"
                            title="Formato de coordenadas DD&#13;&#10;Latitud: -42.23&#13;&#10;Longitud: -60.10"></i></a>
                      </div>
                    </div>
                    <div class="row mb-3">
                      <div class="col">
                        <label for="detalle" class="form-label">Detalle</label>
                        <textarea class="form-control" id="detalle" name="detalle" rows="4" tabindex="11"
                          autocomplete="off"><%= buque.detalle %></textarea>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <button type="submit" class="btn btn-success mt-3 mb-3" title="Guardar" tabindex="12">Guardar</button>
            <a href="/" class="btn btn-danger mt-3 mb-3" title="Cancelar" tabindex="13">Cancelar</a>
          </form>
        </div>
      </div>
    </div>
    <% }; %>
      <!-- Integro Bootstrap JS -->
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
        </script>
</body>
<!-- Footer -->
<footer class="footer bg-dark text-center text-white mt-5">
  <div class="container p-4">
    <section class="mb-4">
      <a class="btn btn-outline-light btn-floating m-1" href="#" role="button"><i class="fab fa-linkedin-in"></i></a>
      <a class="btn btn-outline-light btn-floating m-1" href="#" role="button"><i class="fab fa-github"></i></a>
      <a class="btn btn-outline-light btn-floating m-1" href="#" role="button"><i class="fab fa-twitter"></i></a>
    </section>
    <div class="text-center text-light">
      <p>&copy; 2024 SRBI. Todos los derechos reservados.</p>
    </div>
  </div>
</footer>

</html>