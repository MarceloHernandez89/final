<!doctype html>
<html lang="es">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>SRBI</title>
  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  <!-- Estilos font-awesome-->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
    integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<!-- Navbar -->
<nav class="navbar navbar-dark bg-dark justify-content-between mx-auto">
  <div class="row no-gutters px-3 mt-3 mb-3">
    <div class="col-auto">
      <a class="navbar-brand mx-auto p-auto"><i class="fa fa-ship" aria-hidden="true"></i></a>
    </div>
    <div class="col-auto p-8">
      <a class="navbar-brand">Sistema de Registro de Buques de Interes</a>
    </div>
  </div>
  </a>
</nav>
<div class="container mt-4">
  <div class="container">
    <div class="card-header mb-3">
      <p class="fs-5 mt-2 text-body-secondary">Crear nuevo registro</p>
    </div>
    <div class="card-body">
      <form action="/save" method="post">
        <!-- Sección de información estática -->
        <div class="accordion mb-3" id="accordionGeneral">
          <div class="accordion-item">
            <h2 class="accordion-header" id="headingGeneral">
              <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseGeneral"
                aria-expanded="true" aria-controls="collapseGeneral">
                Información estática
              </button>
            </h2>
            <div id="collapseGeneral" class="accordion-collapse collapse show" aria-labelledby="headingGeneral"
              data-bs-parent="#accordionGeneral">
              <div class="accordion-body">
                <div class="row mb-3">
                  <!-- Campos de la sección -->
                  <div class="col">
                    <label for="nombre" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="nombre" name="nombre" "
                          tabindex=" 1">
                  </div>
                  <div class="col">
                    <label for="bandera" class="form-label">Bandera</label>
                    <select class="form-select" id="bandera" name="bandera" tabindex="2">
                      <option value="" selected disabled></option>
                      <option value="China">China</option>
                      <option value="Corea del Sur">Corea del Sur</option>
                      <option value="España">España</option>
                      <option value="No reconocida">No reconocida</option>
                      <option value="Portugal">Portugal</option>
                      <option value="Taiwan">Taiwan</option>
                      <option value="Vanuatu">Vanuatu</option>
                      <option value="Noruega">Noruega</option>
                    </select>
                  </div>
                </div>
                <div class="row mb-3">
                  <div class="col">
                    <label for="mmsi" class="form-label">MMSI</label>
                    <input type="text" class="form-control" id="mmsi" name="mmsi" "
                          tabindex=" 4">
                  </div>
                  <div class="col">
                    <label for="imo" class="form-label">IMO</label>
                    <input type="text" class="form-control" id="imo" name="imo" " tabindex=" 5">
                  </div>
                  <div class="col">
                    <label for="call_sign" class="form-label">Call Sign</label>
                    <input type="text" class="form-control" id="call_sign" name="call_sign" tabindex="3">
                  </div>
                </div>
                <div class="row mb-3">
                  <div class="col">
                    <label for="clase" class="form-label">Clase</label>
                    <select class="form-select" id="clase" name="clase" tabindex="5">
                      <option value="" selected disabled></option>
                      <option value="Pesquero">Pesquero</option>
                    </select>
                  </div>
                  <div class="col">
                    <label for="subclase" class="form-label">Subclase</label>
                    <select class="form-select" id="subclase" name="subclase" tabindex="5">
                      <option value="" selected disabled></option>
                      <option value="Arrastrero">Arrastrero</option>
                      <option value="Palangrero">Palangrero</option>
                      <option value="Potero">Potero</option>
                      <option value="Polivalente">Polivalente</option>
                      <option value="Pesquero no identificado">Pesquero no identificado</option>
                    </select>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- Sección información dinámica y detalle -->
        <div class="accordion" id="accordionCoordenadasDetalle">
          <div class="accordion-item">
            <h2 class="accordion-header" id="headingCoordenadasDetalle">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                data-bs-target="#collapseCoordenadasDetalle" aria-expanded="false"
                aria-controls="collapseCoordenadasDetalle">
                Coordenadas y Detalle
              </button>
            </h2>
            <div id="collapseCoordenadasDetalle" class="accordion-collapse collapse"
              aria-labelledby="headingCoordenadasDetalle" data-bs-parent="#accordionCoordenadasDetalle">
              <div class="accordion-body">
                <div class="row mb-3">
                  <div class="col">
                    <label for="medio_gc" class="form-label">Medio PNA</label>
                    <select class="form-select" id="medio_gc" name="medio_gc" tabindex="8">
                      <option value="" selected disabled></option>
                      <option value="GC-28 DERBES">GC-28 DERBES</option>
                      <option value="GC-24 MANTILLA">GC-24 MANTILLA</option>
                    </select>
                  </div>
                  <div class="col">
                    <label for="latitud" class="form-label">Latitud</label>
                    <input type="text" class="form-control" id="latitud" name="latitud">
                  </div>
                  <div class="col">
                    <label for="longitud" class="form-label">Longitud</label>
                    <input type="text" class="form-control" id="longitud" name="longitud" tabindex="10">
                  </div>
                </div>
                <div class="row mb-3">
                  <div class="col">
                    <label for="detalle" class="form-label">Detalle</label>
                    <textarea class="form-control" id="detalle" name="detalle" rows="4" tabindex="11"></textarea>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <button type="submit" class="btn btn-success mt-3 mb-3" title="Guardar" tabindex="5">Guardar</button>
        <a href="/" class="btn btn-danger mt-3 mb-3" title="Cancelar">Cancelar</a>
      </form>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

</html>